{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "module": "CommonJS",
        "target": "ES2019",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "cli.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}